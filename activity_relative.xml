<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="lecture2"
        android:textSize="22dp"
        android:background="@color/purple_200"></TextView>
      <Button
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:text="Button"
          android:layout_centerInParent="true"
          android:id="@+id/dialog_button"></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/dialog_button"
        android:layout_above="@id/dialog_button"
        android:background="@color/purple_200"></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/dialog_button"
        android:layout_toRightOf="@id/dialog_button"
        android:background="@color/purple_200"></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/dialog_button"
        android:layout_toLeftOf="@id/dialog_button"
        android:background="@color/purple_200"></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/dialog_button"
        android:layout_below="@id/dialog_button"
        android:background="@color/purple_200"></Button>
</RelativeLayout>